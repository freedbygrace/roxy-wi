###############################################################################
# Roxy-WI Docker Stack Environment Configuration
#
# Copy this file to .env and customize values as needed
# Usage: docker compose -f docker/docker-compose.yml up -d
#
# Default: SQLite mode (no external database required)
# To enable MySQL: Uncomment DATABASE section and set APPLICATION_MYSQL_ENABLE=1
###############################################################################

###BEGIN GENERAL###
STACK_NAME=stk-roxy-wi-001
STACK_BINDMOUNTROOT=custom/docker/stacks
TZ=America/New_York
UID=0
GID=0
SERVICE_BIND_ADDRESS_EXTERNAL=0.0.0.0
SERVICE_BIND_ADDRESS_INTERNAL=127.0.0.1
DNSSERVER=1.1.1.1
###END GENERAL###

###BEGIN DATABASE (Optional - Uncomment to enable MySQL)###
# DATABASE_IMAGENAME=mysql
# DATABASE_IMAGEVERSION=8.0
# DATABASE_ENABLEAUTOMATICUPDATES=false
# DATABASE_HOST=ROXY-WI-DB-001
# DATABASE_PORT=3306
# DATABASE_ROOT_PASSWORD=roxywi-root-change-me
# DATABASE_USER=roxy-wi
# DATABASE_PASSWORD=roxy-wi-change-me
# DATABASE_NAME=roxywi
###END DATABASE###

###BEGIN APPLICATION###
APPLICATION_IMAGENAME=roxy-wi/roxy-wi
APPLICATION_IMAGEVERSION=latest
APPLICATION_ENABLEAUTOMATICUPDATES=true
APPLICATION_PORT_EXTERNAL=8080
# Set to 1 and uncomment DATABASE section above to use MySQL
APPLICATION_MYSQL_ENABLE=0
# Leave empty to auto-generate, or set a custom 32-char base64 secret
APPLICATION_SECRET_PHRASE=
###END APPLICATION###

